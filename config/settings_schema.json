        "max": 200,
        "step": 10,
        "unit": "px",
        "default": 80
      },
      {
        "type": "checkbox",
        "id": "header_sticky",
        "label": "Enable Sticky Header",
        "default": true
      }
    ]
  },
  {
    "name": "Announcement Bar",
    "settings": [
      {
        "type": "checkbox",
        "id": "announcement_bar_enabled",
