<div class="brand-grid" data-section-id="{{ section.id }}">
  <div class="brand-grid__container">
    
    {% if section.settings.heading != blank %}
      <h2 class="brand-grid__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="brand-grid__subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    <div class="brand-grid__items">
      {% for block in section.blocks %}
        <div class="brand-grid__item" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link }}" class="brand-grid__link">
            {% if block.settings.image != blank %}
              <div class="brand-grid__image-wrapper">
                <img src="{{ block.settings.image | img_url: '300x' }}" 
                     alt="{{ block.settings.brand_name }}"
                     class="brand-grid__image">
              </div>
            {% endif %}
            
            <div class="brand-grid__content">
              {% if block.settings.brand_name != blank %}
                <h3 class="brand-grid__brand-name">{{ block.settings.brand_name }}</h3>
              {% endif %}
              
              {% if block.settings.description != blank %}
                <p class="brand-grid__description">{{ block.settings.description }}</p>
              {% endif %}
            </div>
          </a>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.show_navigation %}
      <div class="brand-grid__navigation">
        <button class="brand-grid__nav-btn brand-grid__nav-btn--prev" aria-label="Previous">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="brand-grid__nav-btn brand-grid__nav-btn--next" aria-label="Next">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .brand-grid {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
  }

  .brand-grid__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 30px;
    position: relative;
  }

  .brand-grid__heading {
    text-align: center;
    font-size: 36px;
    font-weight: 400;
    margin: 0 0 20px 0;
    color: {{ section.settings.text_color }};
    letter-spacing: -0.5px;
  }

  .brand-grid__subheading {
    text-align: center;
    font-size: 14px;
    color: {{ section.settings.text_color }};
    opacity: 0.7;
    margin: 0 0 60px 0;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .brand-grid__items {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px 30px;
  }

  .brand-grid__item {
    text-align: center;
  }

  .brand-grid__link {
    text-decoration: none;
    color: inherit;
    display: block;
    transition: transform 0.3s ease;
  }

  .brand-grid__link:hover {
    transform: translateY(-5px);
  }

  .brand-grid__image-wrapper {
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 80px;
  }

  .brand-grid__image {
    max-width: 150px;
    height: auto;
    display: block;
    filter: grayscale(100%);
    opacity: 0.7;
    transition: all 0.3s ease;
  }

  .brand-grid__link:hover .brand-grid__image {
    filter: grayscale(0%);
    opacity: 1;
  }

  .brand-grid__brand-name {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 8px 0;
    color: {{ section.settings.text_color }};
    letter-spacing: 0.5px;
  }

  .brand-grid__description {
    font-size: 13px;
    color: {{ section.settings.text_color }};
    opacity: 0.6;
    margin: 0;
    font-style: italic;
  }

  .brand-grid__navigation {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 60px;
  }

  .brand-grid__nav-btn {
    background: none;
    border: 1px solid {{ section.settings.text_color }};
    color: {{ section.settings.text_color }};
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .brand-grid__nav-btn:hover {
    background-color: {{ section.settings.text_color }};
    color: {{ section.settings.bg_color }};
  }

  @media (max-width: 768px) {
    .brand-grid__items {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px 20px;
    }

    .brand-grid__heading {
      font-size: 28px;
    }
  }
</style>

